"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
   <package name="com.tutorilaspoint.struts2" extends="struts-default" namespace="/" >
      <result-types>
         <result-type name="tiles" 
         class="org.apache.struts2.views.tiles.TilesResult" />
      </result-types>

      <action name="tigerMenu" method="tiger" 
         class="com.tutorilaspoint.struts2.MenuAction">
         <result name="tiger" type="tiles">tiger</result>
         
      </action>
<action name="lionMenu" method="lion" 
         class="com.tutorilaspoint.struts2.MenuAction">
         <result name="lion" type="tiles">lion</result>
         
      </action>
   </package>
</struts>